<h1>電気料金のシミュレーション</h1>

<div data-controller="plans" class="simulator">
  <form data-action="submit->plans#search" class="sim-form">
    <div class="form-group">
      <label for="ampere">契約アンペア数 (A)</label>
      <%= select_tag :ampere, options_for_select(PlansController::PERMITTED_AMPERES), data: { plans_target: "ampere" }, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="usage">使用量 (kWh)</label>
      <input type="number" name="usage" min="0" value="0" data-plans-target="usage" class="form-control">
    </div>

    <button type="submit" class="btn" data-action="plans#search">
      シミュレーション実行
    </button>
  </form>

  <table class="result-table">
    <thead>
      <tr>
        <th>電力会社名</th>
        <th>プラン名</th>
        <th>電気料金（円）</th>
      </tr>
    </thead>
    <tbody data-plans-target="results">
    </tbody>
  </table>
</div>
